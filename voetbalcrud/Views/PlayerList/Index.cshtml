@model IEnumerable<voetbalcrud.Models.Player>

@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlayerName)
        </th>
 
        <th>
            @Html.DisplayNameFor(model => model.Keep)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Midfield)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Defend)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerName)
        </td>
        <th>
            @Html.DisplayFor(modelItem => item.Keep)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.Midfield)
        </th>
        <th>
            @Html.DisplayFor(modelItem => item.Attack)
        </th>
        <th>
            @Html.DisplayFor(modelItem =>item.Defend)
        </th>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
           
        </td>
    </tr>
}

</table>



 
